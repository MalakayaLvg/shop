    {% for product in products %}
    <div class="form-control my-2">
        <h3>{{ product.name }}</h3>
        <h5>{{ product.description }}</h5>
        <h5>{{ product.price }} â‚¬</h5>
        <h6>{{ product.createdAt | date("m/d/Y") }}</h6>
